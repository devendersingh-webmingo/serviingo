<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#CCF6F6F6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView

            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:paddingStart="34dp"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="34dp"
            android:text="Sign up to get started!"
            android:textColor="@color/grey_l"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"

            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="#CCF6F6F6"
            android:orientation="vertical">


            <EditText
                android:id="@+id/numberEd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_rectangle"

                android:gravity="center"
                android:hint="Enter your  mobile number "
                android:padding="@dimen/_7sdp"
                android:textColorHint="#CC707070"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:gravity="center|bottom"
                android:text="You will get OTP on this Number"
                android:textColor="@color/grey_l"
                android:textSize="@dimen/_13sdp" />

            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/grey_l" />


            <TextView
                android:id="@+id/withhsendnewotpTv"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rect_light_blue"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Send OTP"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="I'm already a member, "
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/withSignin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="Sign In "
                    android:textColor="#0088ff"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>