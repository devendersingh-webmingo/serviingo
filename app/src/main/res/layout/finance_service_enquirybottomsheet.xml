<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CheckOutFragment">


    <RelativeLayout
        android:id="@id/rl_topp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@color/head_lightBlue">


        <ImageView
            android:id="@+id/arrowIvv"

            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:rotation="-90"
            android:src="@drawable/arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_dashboardd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_toRightOf="@id/arrowIvv"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center"

            android:paddingLeft="@dimen/_15sdp"
            android:text="Home  > Finance Query"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_topp"
        android:layout_marginBottom="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30sdp">

             <TextView
                 android:visibility="gone"
                 android:id="@+id/suecssTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/_8sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Your Query Successfully Submitted, Our Team Content You Soon !!"
                android:textColor="@color/green" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPackage"
                android:layout_margin="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/_10sdp"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/_5sdp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allsideborder"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Name"
                        android:textColor="#9a9a9a" />


                    <EditText
                        android:layout_margin="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:id="@+id/ET_Name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Enter Name"
                        android:layout_gravity="center"
                        android:gravity="left|center_vertical"
                        android:inputType="text"
                        android:background="@color/white"
                        android:textColor="@color/black_"
                        android:textColorHint="@color/black_"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Email"
                            android:textColor="#9a9a9a" />


                        <EditText
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/ET_Email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:hint="Enter Email"
                            android:layout_gravity="center"
                            android:gravity="left|center_vertical"
                            android:inputType="text"
                            android:background="@color/white"
                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Mobile No."
                            android:textColor="#9a9a9a" />


                        <EditText
                            android:maxLength="10"
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/ET_Mobile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:hint="Enter Mobile No."
                            android:layout_gravity="center"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:background="@color/white"
                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="DOB"
                            android:textColor="#9a9a9a" />


                        <TextView
                            android:layout_margin="@dimen/_5sdp"
                            android:id="@+id/startDate"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:gravity="left|center_vertical"
                            android:layout_gravity="right|center_vertical"
                            android:drawableRight="@drawable/ic_baseline_calender_24"
                            android:drawableTint="@color/drawer_icon"
                            android:text="mm/dd/yyyy"
                            android:inputType="text"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="@dimen/_5sdp"
                            android:textColor="@color/black_text"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Work Profile"
                            android:textColor="#9a9a9a" />

                            <Spinner
                                android:layout_margin="@dimen/_5sdp"
                                android:id="@+id/workprofile"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:spinnerMode="dropdown"

                                android:textColor="@color/black_"
                                android:textColorHint="@color/black_"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Aadhar Number"
                            android:textColor="#9a9a9a" />


                        <EditText
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/et_adahernumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:hint=" Enter Aadhar Number"
                            android:maxLength="12"

                            android:layout_gravity="center"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:background="@color/white"
                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="PAN Number"
                            android:textColor="#9a9a9a" />


                        <EditText
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/etpannumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:hint="Enter PAN Number"
                            android:layout_gravity="center"
                            android:gravity="left|center_vertical"
                            android:inputType="text"
                            android:background="@color/white"
                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>




                   <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto"
                        android:padding="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Address"
                        android:textColor="#9a9a9a" />

                    <EditText
                        android:id="@+id/ET_Address"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Enter Complete Address."
                        android:inputType="text"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_"
                        android:textColorHint="@color/black_"
                        android:textSize="@dimen/_15sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="State"
                            android:textColor="#9a9a9a" />

                        <Spinner
                            android:layout_margin="@dimen/_5sdp"
                            android:id="@+id/spinner_state"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="City"
                            android:textColor="#9a9a9a" />

                        <Spinner
                            android:layout_margin="@dimen/_5sdp"
                            android:id="@+id/cityspinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allsideborder"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="Pincode"
                            android:textColor="#9a9a9a" />


                        <EditText
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/ET_Pincode"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:hint=" Enter Pincode Number"
                            android:maxLength="6"

                            android:layout_gravity="center"
                            android:gravity="left|center_vertical"
                            android:inputType="number"
                            android:background="@color/white"
                            android:textColor="@color/black_"
                            android:textColorHint="@color/black_"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>




                    <TextView
                        android:id="@+id/TV_Payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/rect_light_blue"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Apply Now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>