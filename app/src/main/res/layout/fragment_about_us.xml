<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.AboutUsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <RelativeLayout
        android:id="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/root_lay"
        android:background="@color/head_lightBlue">

        <TextView
            android:id="@id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_toRightOf="@id/tv_home"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text=" > About us"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/short_descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/telex"
                android:gravity="center_vertical"
                android:text="About Serviingo"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/bg_blue"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_1sdp"
                    app:contentPadding="@dimen/_5sdp"></androidx.cardview.widget.CardView>
                <!--                   <ImageView-->
                <!--                      android:layout_width="match_parent"-->
                <!--                      android:layout_height="match_parent"-->
                <!--                      android:src="@drawable/iv_restaurents"-->
                <!--                      android:scaleType="center"/>-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginBottom="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/bg_blue"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_1sdp"
                    app:contentPadding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/imageViews"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@drawable/imageview"
                        android:padding="@dimen/_20sdp"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Know More About Us"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <!--               <AutoCompleteTextView-->
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:fontFamily="@font/telex"
                android:gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/heading5"
                android:textColor="@color/grey_" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/bg_lightgrey"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/bg_blue"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="@dimen/_5sdp"></androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ourprogram_cv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/cutdrwable"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/sectionheading1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/oswald"
                                android:padding="@dimen/_2sdp"
                                android:text="How We do it"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/sectiondescription1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/roboto"
                                android:text="@string/heading5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/bg_blue"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="@dimen/_5sdp"></androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/cutdrwable"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/sectionheading2"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/oswald"
                                android:padding="@dimen/_2sdp"
                                android:text="Our Mission"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sectiondescription2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/telex"
                                android:text="@string/heading5" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/bg_blue"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="@dimen/_5sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/cutdrwable"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="@dimen/_1sdp"
                        app:contentPadding="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/sectionheading3"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/oswald"
                                android:padding="@dimen/_2sdp"
                                android:text="Our Story so for"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sectiondescription3"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/telex"
                                android:text="@string/heading5" />


                            <ImageView
                                android:id="@+id/imagesection3"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/_25sdp"
                                android:layout_marginRight="@dimen/_30sdp"
                                android:layout_marginBottom="@dimen/_25sdp"
                                android:background="@drawable/ourstory"
                                android:scaleType="fitCenter" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/cutdrwable"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sectionheading4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/oswald"
                            android:gravity="center"
                            android:text="Join Serve Easy to\nchange your life"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />


                        <TextView

                            android:id="@+id/sectiontitle4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/roboto"
                            android:padding="@dimen/_10sdp"
                            android:text="@string/heading5"
                            android:textColor="@color/grey_" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_120sdp"
                                android:background="@drawable/profile"
                                android:scaleType="fitCenter" />

                            <TextView
                                android:id="@+id/count1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/oswald"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="30,000+"
                                android:textColor="@color/bg_blue"
                                android:textSize="@dimen/_25sdp" />


                        </FrameLayout>

                        <TextView

                            android:id="@+id/title1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Partners already on Board"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sdp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_120sdp"
                                android:background="@drawable/dollor"
                                android:scaleType="fitCenter" />

                            <TextView

                                android:id="@+id/count2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/oswald"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="\u20B9 566Cr"
                                android:textColor="@color/bg_blue"
                                android:textSize="@dimen/_25sdp" />


                        </FrameLayout>

                        <TextView

                            android:id="@+id/title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Paid Out to Partners in 2019"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sdp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_45sdp"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_gravity="right"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_120sdp"
                                android:background="@drawable/smiley"
                                android:scaleType="fitCenter" />

                            <TextView

                                android:id="@+id/count3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:fontFamily="@font/oswald"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="750,000+"
                                android:textColor="@color/bg_blue"
                                android:textSize="@dimen/_25sdp" />
                        </FrameLayout>

                        <TextView

                            android:id="@+id/title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_40sdp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Services delivered each month"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_22sdp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>