<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".Fragments.GenerateTicketsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="#0069b2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="Support Tickets"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlProfilePic"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"


                            android:layout_weight="1"
                            android:text="Subject Query" />

                        <TextView
                            android:id="@+id/transactionTV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"


                            android:layout_weight="1"
                            android:text="Your Query" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"


                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/allsideborder"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/SubjectSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:spinnerMode="dropdown"

                                android:textColor="@color/black_text"
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_12sdp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"


                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/allsideborder"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/transactionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"

                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:spinnerMode="dropdown"
                                android:textColor="@color/black_text"
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_15sdp"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                            <EditText
                                android:visibility="gone"
                                android:id="@+id/OtherIssueTV"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:hint="Enter Other Subject"
                                android:inputType="text"
                                android:background="@drawable/allsideborder"

                                android:paddingLeft="@dimen/_8sdp"
                                android:textColor="@color/black_text"
                                android:textColorHint="@color/hint_color"
                                android:textSize="@dimen/_15sdp" />

                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"


                        android:layout_weight="1"
                        android:text="Your Query" />

                    <EditText
                        android:id="@+id/Query"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:gravity="center_vertical"
                        android:hint="Your Query"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_8sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/Tv_UploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:gravity="center_vertical"
                        android:drawableRight="@drawable/upload"
                        android:drawableTint="@color/drawer_icon"
                        android:hint="Choose Image"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"


                        android:layout_weight="1"
                        android:text="Priority" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"


                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/PrioritySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_text"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/_15sdp"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/SupportTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_20sdp"
                        android:background="@drawable/black_border"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_18sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_18sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="Support Tickets"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp" />


                </LinearLayout>
            </RelativeLayout>
            <!--                    </androidx.cardview.widget.CardView>-->


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>