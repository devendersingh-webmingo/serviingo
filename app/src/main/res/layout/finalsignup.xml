<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:fontFamily="@font/teko_semibold"
            android:gravity="center|bottom"
            android:text="Sign Up"
            android:textColor="@color/bg_blue"
            android:textSize="@dimen/_35sdp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:text="Register now to access your account! "
            android:textColor="@color/grey_light"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/etReferralId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border_rectangle"
            android:hint="Enter Referral Id"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border_rectangle"

            android:paddingLeft="@dimen/_10sdp"
            android:hint="Enter Name"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border_rectangle"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border_rectangle"
            android:paddingLeft="@dimen/_10sdp"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp" />

        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:background="@drawable/border_rectangle"

            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_rectangle"
                android:paddingLeft="@dimen/_10sdp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"

            android:background="@drawable/border_rectangle"

            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText

                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_rectangle"
                android:paddingLeft="@dimen/_10sdp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_15sdp" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvSignup"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rect_light_blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Create an Account"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />


        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/teko_semibold"
                android:gravity="center"
                android:onClick="OnClick_Login"
                android:text="@string/extraAccount"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>