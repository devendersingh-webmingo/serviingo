<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_3sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/_5sdp"
    app:contentPadding="0dp">



        <RelativeLayout
            android:id="@+id/rr"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#1AF6F6F6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"

          >

            <TextView

                android:id="@+id/tvwallet"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ll"
                android:background="#1AF6F6F6"
                android:fontFamily="@font/roboto_bold"
                android:text="AC Repair"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
            <LinearLayout

                android:foregroundGravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_below="@+id/tvwallet"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/roboto"
                    android:gravity="right"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="\u20B9 250"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@color/grey_"

                        />

                    <TextView
                        android:id="@+id/tvdata"
                        android:fontFamily="@font/roboto"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="1dp"
                        android:gravity="right"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="\u20B9 250"
                        android:textColor="@color/grey_l"
                        android:textSize="@dimen/_12sdp" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="% OFF "
                    android:textColor="@color/green"
                    android:textSize="@dimen/_12sdp" />
                <ImageView

                    android:layout_margin="@dimen/_5sdp"
                    android:foregroundGravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/deleteAdonse"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/grey_border"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_trash__1_"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/color_border_primary"

                android:id="@+id/ll"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/updateCartDecrease"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_cart_minus"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/quentityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/updateCartIncrease"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_cart_plus"
                    app:tint="@color/black" />

            </LinearLayout>


        </RelativeLayout>


        </androidx.cardview.widget.CardView>





