<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/_12sdp"
    app:cardElevation="@dimen/_8sdp"
    app:contentPadding="5dp">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_200sdp"

        android:orientation="vertical">


        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:drawableLeft="@drawable/ic_baseline_close_24"
            android:drawableTint="@color/drawer_icon"
            android:fontFamily="@font/lato"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text=" Add Money to Wallet"
            android:textColor="@color/drawer_icon"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="01dp"
            android:background="@color/white"
            android:paddingLeft="2dp"
            android:paddingRight="2dp" />

        <EditText
            android:id="@+id/EditMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/border_rectangle"
            android:inputType="number"

            android:gravity="center"
            android:hint="Amount to Add"
            android:padding="@dimen/_7sdp"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView

            android:id="@+id/otpContinue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:background="@drawable/otpsubmitbotton"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>