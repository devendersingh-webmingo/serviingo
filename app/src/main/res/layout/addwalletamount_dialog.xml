<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_box"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_20sdp">


        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:src="@drawable/ic_close_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto"
            android:text="Payment Details"
            android:textColor="@color/black_"
            android:textSize="@dimen/_18sdp" />


        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_15sdp"

            android:background="@color/grey_" />-->

        <RadioGroup

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/border_rectangle"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_Wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:backgroundTint="@color/black_"
                android:text=" Wallet"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <RadioButton
                android:id="@+id/rb_OnlinePayment"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:backgroundTint="@color/black_"
                android:text=" Online Payment"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />


        </RadioGroup>

        <TextView
            android:layout_margin="@dimen/_8sdp"
            android:id="@+id/btn"

            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llrg"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/review_bg"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>

</LinearLayout>