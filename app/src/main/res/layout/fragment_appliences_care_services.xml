<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".Fragments.AppliencesCareServicesFragment">

    <TextView
        android:id="@+id/buymember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_marginBottom="@dimen/_100sdp"
        android:background="@drawable/circle"
        android:elevation="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text="Buy \n Membership "
        android:textColor="#FFF"
        android:textSize="@dimen/_8sdp"

        android:visibility="gone" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/root_lay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/bgcolor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_pack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="Appliances care services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvHeading"
                    android:src="@drawable/ic_chevron_right" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvSubHeading"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/roboto_bold"
                android:paddingLeft="@dimen/_5sdp"
                android:text="AC- Repair and services "
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@color/bgcolor">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_100sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/round_border_bg"
                    android:scaleType="fitXY"
                    android:src="@drawable/ac"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvAc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="AC Repair "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAc"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="\u20B9"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/tvvv"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="143"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/tv">

                    <View
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/grey_"

                        />

                    <TextView
                        android:id="@+id/tvdata"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_amt"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="\u20B9 270"
                        android:textColor="@color/grey_"
                        android:textSize="@dimen/_12sdp" />

                </FrameLayout>

                <TextView
                    android:id="@+id/tvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/fl"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:text="10% OFF "
                    android:textColor="@color/green"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/ivgreen"
                    android:background="@drawable/color_border_primary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:id="@+id/updateCartDecrease"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_cart_minus"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/quentityTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/updateCartIncrease"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_cart_plus"
                        app:tint="@color/black" />

                </LinearLayout>


                <ImageView

                    android:id="@+id/ivgreens"
                    android:layout_width="@dimen/_30sdp"

                    android:layout_height="@dimen/_30sdp"
                    android:layout_below="@+id/tvAc"
                    android:layout_toRightOf="@+id/tvv"

                    android:background="@drawable/grey_border"
                    android:padding="@dimen/_8sdp"
                    android:src="@drawable/ic_trash__1_"
                    android:textColor="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/package_servicesRC"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivgreens"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/bgcolor"
                    tools:itemCount="2"
                    tools:listitem="@layout/package_servicesrc" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/package_servicesRC"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:background="@drawable/allui"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="@dimen/_10sdp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@dimen/_5sdp"
                    app:contentPadding="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bgcolor"
                        android:padding="@dimen/_5sdp">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:background="@color/bgcolor"
                            tools:itemCount="2"
                            tools:listitem="@layout/cartlist" />

                        <TextView
                            android:id="@+id/tvSubTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/roboto"
                            android:text="Service Total Amount "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />


                        <TextView
                            android:id="@+id/tvsubmoney"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/recyclerView"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="right"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="\u20B9 0"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_16sdp" />


                        <TextView

                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSubTotal"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/roboto"
                            android:text=" Price Discount (-)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />


                        <TextView
                            android:id="@+id/tvrs"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSubTotal"

                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="right"
                            android:text="+ \u20B9 0"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_16sdp" />


                        <RelativeLayout

                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:id="@+id/subtotall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvDiscount"
                            android:layout_gravity="center"

                            android:layout_marginLeft="@dimen/_15sdp"
                           >

                            <TextView
                                android:id="@+id/MembershipFeesTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/roboto"
                                android:text="Sub Amount"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                              />


                            <TextView
                                android:id="@+id/SubAmount_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="right"
                                android:text=" + \u20B9 0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp"
                                />

                        </RelativeLayout>

                        <TextView

                            android:id="@+id/tvsafty"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/subtotall"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:fontFamily="@font/roboto"
                            android:text="Safety and Hygiene fee (+)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />


                        <TextView
                            android:id="@+id/tvrus"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/subtotall"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="right"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text=" + \u20B9 0"
                            android:textColor="@color/color_progress"
                            android:textSize="@dimen/_16sdp" />

                        <LinearLayout
                            android:id="@+id/memebershipstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvsafty"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/memebershipPurchase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                              >

                                <TextView
                                    android:id="@+id/memebershipPurchasename"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Membership Plan( Silver Plan ) (+)"

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp" />

                                <ImageView

                                    android:id="@+id/memebershipPurchaseDelete"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:background="@drawable/grey_border"
                                    android:padding="@dimen/_8sdp"
                                    android:src="@drawable/ic_trash__1_"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/memebershipPurchaseprice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:gravity="right"
                                    android:text="200 "
                                    android:textColor="@color/colorPrimaryDark" />


                            </LinearLayout>

                      <!--      <LinearLayout

                                android:id="@+id/memebershipstatusdiscount"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp"
                              >

                                <TextView
                                    android:id="@+id/memebershipstatusTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=" fsdfds"
                                    android:textColor="@color/green"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="italic" />

                                <ImageView
                                    android:id="@+id/deletemembershipPrice"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:background="@drawable/grey_border"
                                    android:padding="@dimen/_8sdp"
                                    android:src="@drawable/ic_trash__1_"
                                    android:textColor="@color/white" />
                            </LinearLayout>
-->
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/memebershipstatusdiscount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/descMemberTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text=""

                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp" />

                                <ImageView

                                    android:id="@+id/deletemembershipPrice"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:background="@drawable/grey_border"
                                    android:padding="@dimen/_8sdp"
                                    android:src="@drawable/ic_trash__1_"
                                    android:textColor="@color/white" />

                                <TextView
                                    android:id="@+id/memebershipstatusTv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_15sdp"
                                    android:gravity="right"
                                    android:text="200 "
                                    android:textColor="@color/colorPrimaryDark" />


                            </LinearLayout>
                        </LinearLayout>


                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/memebershipstatus"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/grey_" />


                        <TextView
                            android:id="@+id/tvgrandTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="Grand Total"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tvvaluue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="\u20B9 0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />


                        <View
                            android:id="@+id/vvview"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tvvaluue"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@color/grey_" />


                        <RelativeLayout
                            android:id="@+id/relative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativelayout"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/tvChoosePaymentMethod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:text="Choose Payment Method"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold"

                                android:visibility="invisible" />


                            <TextView
                                android:id="@+id/signup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/timeslot"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_80sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/yellow"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="Login &amp; Proceed to Payment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/slottimeLL"
                            android:visibility="gone"

                            >

                            <TextView
                                android:id="@+id/tvChoosePaymentMethodLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="Choose Payment Method"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <RadioGroup
                                android:id="@+id/rg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvChoosePaymentMethodLogin"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <RadioButton
                                    android:id="@+id/rdwallet"
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/allsideborder"
                                    android:checked="true"
                                    android:gravity="center"
                                    android:paddingRight="@dimen/_4sdp"
                                    android:text="Wallet"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp" />

                                <RadioButton
                                    android:id="@+id/rdallet"
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/allsideborder"
                                    android:gravity="center"
                                    android:paddingRight="@dimen/_4sdp"
                                    android:text="COD"
                                    android:textAllCaps="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp" />

                                <RadioButton
                                    android:id="@+id/rdOnline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_gravity="right"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/allsideborder"
                                    android:gravity="center"
                                    android:paddingRight="@dimen/_4sdp"
                                    android:text="Online "
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_15sdp" />
                            </RadioGroup>

                            <TextView
                                android:id="@+id/totalavailablebalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rg"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/_2sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/totalavailablebalance"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:background="@drawable/rect_light_blue"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:text="Pay Now \u20B9 10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp"
                                android:visibility="gone" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/slottimeLL"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/vvview"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_marginTop="@dimen/_10sdp"

                                android:id="@+id/applyLL"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"


                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/et_promo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/allsideborder"
                                    android:drawableRight="@drawable/ic_promocodee"
                                    android:hint="Enter Coupon Code"
                                    android:inputType="textCapCharacters"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:paddingLeft="6dp"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/apply"
                                    android:layout_width="100sp"

                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_location"
                                    android:padding="8dp"
                                    android:text="Apply"
                                    android:textColor="#8BC34A"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/removeLL"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"


                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:text="COUPON APPLIED SUCCESSFULLY."
                                    android:textStyle="bold"

                                    android:maxLines="1"
                                    android:paddingLeft="6dp"


                                    android:textColor="@color/green"
                                    android:textSize="15dp" />


                                <TextView
                                    android:id="@+id/Remove"
                                    android:layout_width="100sp"

                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_location"
                                    android:padding="8dp"
                                    android:text="Remove"
                                    android:textColor="#F60F0F"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"

                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingRight="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/bgcolor"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_8sdp"
                                app:contentPadding="5dp">

                                <RelativeLayout
                                    android:id="@+id/rel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:padding="@dimen/_8sdp">


                                    <ImageView
                                        android:id="@+id/openSlotBox"

                                        android:layout_width="@dimen/_40sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:layout_alignParentRight="true"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_time" />


                                    <TextView
                                        android:id="@+id/choosefile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/ivImages"
                                        android:fontFamily="@font/roboto_bold"
                                        android:padding="@dimen/_2sdp"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Selected Date And Time Slot"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_17sdp" />


                                    <TextView
                                        android:id="@+id/dateSlot"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/choosefile"
                                        android:layout_toRightOf="@+id/ivImages"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="The standard Lorem Ipsum? "
                                        android:textColor="@color/black" />

                                    <TextView
                                        android:id="@+id/timeslott"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/dateSlot"
                                        android:layout_toRightOf="@+id/ivImages"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:text="Very good service. Would like to come again!"
                                        android:textColor="@color/black" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>



                        </LinearLayout>

                        <TextView
                            android:id="@+id/timeslot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvAddMoreServices"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/wallet_bg"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="Choose Time Slot"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAddMoreServices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relativelayout"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/blue"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="Add More Services"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>



