<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    android:background="#00F6F6F6"
    android:gravity="center">
    <TextView
        android:id="@+id/back"
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:fontFamily="@font/roboto_bold"
        android:drawablePadding="@dimen/_8sdp"
        android:drawableLeft="@drawable/arrow2"
        android:textSize="@dimen/_18sdp"
        android:text="Forget Password"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/back"


        android:foregroundGravity="center"

        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical"

            android:padding="@dimen/_8sdp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_sendotp"
                android:padding="@dimen/_8sdp"
                tools:ignore="RtlHardcoded">

            </ImageView>

            <TextView

                android:id="@+id/d_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Plese enter your registered email ID/Phone"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />


            <TextView
                android:id="@+id/d_tax_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="@dimen/_5sdp"

                android:text="we will send a verification code to your registerd email ID/Phone"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="normal" />


            <EditText

                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/edittextbox"
                android:drawableRight="@drawable/profilee"
                android:gravity="center"

                android:hint="Email / Phone No"
                android:padding="@dimen/_8sdp"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_15sdp" />


            <TextView

                android:id="@+id/otpContinue"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"

                android:layout_margin="10dp"
                android:background="@drawable/otpsubmitbotton"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Don't have an account"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text=" Create an Account"
            android:textColor="@color/textColor_blue"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>