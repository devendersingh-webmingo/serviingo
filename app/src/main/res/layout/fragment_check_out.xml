<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CheckOutFragment">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/allsideborder"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_30sdp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tvCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="CheckOut"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="@dimen/_5sdp"
                    android:text="Address:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@color/grey_l"
                    android:visibility="visible" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPackage"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/allui"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="@dimen/_10sdp"
                app:cardCornerRadius="5dp"
                app:cardElevation="@dimen/_5sdp"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allsideborder"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_marginTop="@dimen/_15sdp"
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Name"
                        android:textColor="@color/black_" />


                    <EditText
                        android:id="@+id/ET_Name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/etPostEmail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Name"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Email"
                        android:textColor="@color/black_" />
                    <EditText
                        android:id="@+id/ET_Email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/etPostEmail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />
                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Mobile No."
                        android:textColor="@color/black_" />

                    <EditText
                        android:id="@+id/ET_Mobile"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/etPostEmail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Mobile No."
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />
                    <LinearLayout
                        android:id="@+id/selectAddressLL"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Select Address From Your Address Book:"
                        android:textColor="@color/black_" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/SpinnerAddresss"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_text"
                            android:textColorHint="@color/hint_color"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Address"
                        android:textColor="@color/black_" />
                    <EditText
                        android:id="@+id/ET_Address"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Address"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />
                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Landmark"
                        android:textColor="@color/black_" />

                    <EditText
                        android:id="@+id/ET_LandMark"

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/etPostEmail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Landmark"
                        android:inputType="text"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="State"
                        android:textColor="@color/black_" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/spinner_state"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_text"
                            android:textColorHint="@color/hint_color"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>
                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="City"
                        android:textColor="@color/black_" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/allsideborder"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/cityspinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/abc_spinner_mtrl_am_alpha"
                            android:backgroundTint="@color/black"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:spinnerMode="dropdown"

                            android:textColor="@color/black_text"
                            android:textColorHint="@color/hint_color"
                            android:theme="@style/ThemeOverlay.AppCompat.Light" />
                    </LinearLayout>



                    <TextView
                        android:padding="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Pincode"
                        android:textColor="@color/black_" />
                    <EditText
                        android:id="@+id/ET_Pincode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/etPostEmail"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_15sdp" />
                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:id="@+id/SaveInAddressBook_CB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save In AddressBook"/>
                        <CheckBox
                            android:visibility="gone"
                            android:id="@+id/CheckBoxProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save In Profile"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            android:id="@+id/tvChoosePaymentMethodLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Choose Payment Method"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/rg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvChoosePaymentMethodLogin"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/rdwallet"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/allsideborder"
                                android:checked="true"
                                android:gravity="center"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="Wallet"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />

                            <RadioButton
                                android:id="@+id/rdallet"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/allsideborder"
                                android:gravity="center"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="COD"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />
                            <RadioButton
                                android:id="@+id/rdOnline"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="right"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/allsideborder"
                                android:gravity="center"
                                android:paddingRight="@dimen/_4sdp"
                                android:text="Online "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15sdp" />
                        </RadioGroup>



                    </RelativeLayout>


                    <TextView
                        android:id="@+id/TV_Payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/rect_light_blue"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="Proceed to Payment"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>