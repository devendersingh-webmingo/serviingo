<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">



                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nofound"

                    />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="1"

                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="Low Contact "
                        android:textColor="#1d99ef"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>
                <TextView
                    android:gravity="right"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Action"
                    android:textColor="#787878"
                    android:textSize="@dimen/_15sdp" />


                <LinearLayout
                    android:layout_gravity="center"

                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_gravity="center"
                            android:text="Created at"
                            android:textColor="#787878"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/dateandtimeTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Created at"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/editImage"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_width="@dimen/_25sdp"
                        android:padding="@dimen/_3sdp"

                        android:layout_height="@dimen/_25sdp"
                        android:layout_margin="@dimen/_2sdp"

                        android:background="@drawable/grey_border"
                        android:src="@drawable/righttick"
                        app:tint="@color/green" />
                    <ImageView
                        android:layout_margin="@dimen/_2sdp"

                        android:layout_gravity="right"
                        android:gravity="right"
                        android:padding="@dimen/_5sdp"

                        android:id="@+id/deleteimage"
                        android:layout_width="@dimen/_25sdp"

                        android:layout_height="@dimen/_25sdp"

                        android:background="@drawable/grey_border"
                        android:src="@drawable/ic_trash__1_"
                        app:tint="@color/colorPrimaryDark" />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/_5sdp"

                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_gravity="left"
                        android:gravity="left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Membership"
                        android:textColor="#787878"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/servedatetimetv"
                        android:gravity="right"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Serve Date Time"
                        android:textColor="#787878"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/memebershipstatus"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_gravity="left"
                        android:gravity="left"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text=" No"
                        android:textColor="@color/black_"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/servedatetime"
                        android:gravity="right"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text=" 07 Sep 2021 05:30 PM"
                        android:textColor="@color/black_"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>