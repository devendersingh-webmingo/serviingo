<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_350sdp"
    android:layout_height="@dimen/_300sdp"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"


    >

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/ic_baseline_close_24"
        android:drawableTint="@color/drawer_icon"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/drawer_icon"
        android:textSize="@dimen/_15sdp"
        android:textStyle="normal" />

    <TextView

        android:id="@+id/d_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="@string/otp_verification"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp" />


    <TextView
        android:id="@+id/d_tax_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:padding="@dimen/_5sdp"

        android:text="@string/enter_the_6_digit_otp_received_on_your_mobile_number"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="normal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"

        android:padding="@dimen/_5sdp">


        <com.chaos.view.PinView
            android:id="@+id/pinview"
            style="@style/PinWidget.PinView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:itemBackground="@color/grey"
            app:cursorColor="@color/black"
            app:hideLineWhenFilled="true"
            app:itemCount="4"
            app:itemHeight="@dimen/_44sdp"
            app:itemRadius="5dp"
            app:itemWidth="@dimen/_44sdp"
            app:lineColor="@color/textColor_blue"


            />


    </LinearLayout>

    <TextView
        android:id="@+id/resendotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Resend"

        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="normal"
        android:visibility="gone" />

    <TextView

        android:id="@+id/otpContinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center"

        android:layout_margin="10dp"
        android:background="@drawable/otpsubmitbotton"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="verify"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>




