        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/text_rating"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:saveEnabled="true"
            app:srb_borderColor="@color/orange"
            app:srb_fillColor="@color/yellow"
            app:srb_numberOfStars="5"


            app:srb_starBorderWidth="5"
            app:srb_starSize="@dimen/_30sdp"
            app:srb_stepSize="0.5"

            />

        <TextView
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llrg"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/review_bg"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Send Reviews "
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/editreviewsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llrg"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
