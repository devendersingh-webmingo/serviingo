<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_box"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_30sdp"
        android:paddingBottom="@dimen/_20sdp">


        <ImageView
            android:id="@+id/close"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:background="@drawable/ic_close_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto"
            android:text="Rate &amp; Reviews"
            android:textColor="@color/black_"
            android:textSize="@dimen/_18sdp" />


        <TextView
            android:id="@+id/textt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto"
            android:paddingRight="@dimen/_15sdp"
            android:text="How would you rate your experience? Let us know in the field below."
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/texttttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/roboto"
            android:paddingRight="@dimen/_10sdp"
            android:text="Describe your experience"
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

        <EditText

            android:id="@+id/Ed_comment"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:fontFamily="@font/roboto"
            android:hint="Comment"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black_"
            android:textSize="@dimen/_12sdp" />

