<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_gravity="center"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCF6F6F6"
    android:orientation="vertical">



    <LinearLayout
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:background="#CCF6F6F6"
        android:orientation="vertical">


        <TextView
android:visibility="gone"
            android:id="@+id/TV_Payment"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rect_light_blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:paddingStart="34dp"
            android:text="Login with Email"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_email" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="@color/grey_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Or"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_weight="1"
                android:background="@color/grey_l" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center|bottom"
            android:text="Login with Mobile Number OR Email"
            android:textColor="#02426e"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:text="Mobile Number OR Email"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_rectangle"

            android:gravity="center"
            android:hint="Enter your registered mobile number OR Email"
            android:padding="@dimen/_7sdp"
            android:textColorHint="#CC707070"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:text="Password"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/_12sdp" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_rectangle"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_rectangle"
                android:gravity="center"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:padding="@dimen/_7sdp"
                android:textColorHint="@color/grey_l"
                android:textSize="@dimen/_13sdp" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/withhPasswordTv"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rect_light_blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Submit Now"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Login with your "
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/withotp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="OTP"
                android:textColor="#0088ff"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Forget Password?"
            android:textColor="#0088ff"
            android:textSize="@dimen/_15sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
          >




            <TextView

                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Logging in, you agree the following "
                android:textColor="#333333"
                android:textSize="@dimen/_11sdp" />
            <TextView

                android:id="@+id/tv_termsCond"

                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#0088ff"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_policy"

            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/clickher"
            android:textColor="#333333"
            android:textSize="@dimen/_11sdp" />



    </LinearLayout>
</ScrollView>