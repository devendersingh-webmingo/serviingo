<?xml version="1.0" encoding="utf-8"?>
<ScrollView


xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCF6F6F6"
    android:orientation="vertical">



    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="#CCF6F6F6"
        android:orientation="vertical">


        <TextView

            android:id="@+id/loginwithemailtv"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rect_light_blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:paddingStart="34dp"
            android:text="Login with Email"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="@color/grey_l" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Or"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_70sdp"
                android:layout_weight="1"
                android:background="@color/grey_l" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center|bottom"
            android:text="Login with Mobile Number"
            android:textAllCaps="true"
            android:textColor="#02426e"
            android:textSize="@dimen/_18sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_2sdp"
            android:text="Mobile Number"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/_12sdp" />

        <EditText
            android:id="@+id/ET_Mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_rectangle"

            android:gravity="center"
            android:hint="You will get OTP on this number"
            android:padding="@dimen/_7sdp"
            android:inputType="number"
            android:textColorHint="#CC707070"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/sendotptv"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rect_light_blue"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Login with your "
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/passwordtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Password"
                android:textColor="#0088ff"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Don't have an account?"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/signupTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="SIGN UP"
                android:textColor="#0088ff"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >




            <TextView

                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By Logging in, you agree the following "
                android:textColor="#333333"
                android:textSize="@dimen/_11sdp" />
            <TextView

                android:id="@+id/tv_termsCond"

                android:justificationMode="inter_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#0088ff"
                android:textSize="@dimen/_11sdp" />


        </LinearLayout>
        <TextView
            android:id="@+id/tv_policy"
            android:paddingLeft="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/clickher"
            android:textColor="#333333"
            android:textSize="@dimen/_11sdp" />



    </LinearLayout>
</ScrollView>