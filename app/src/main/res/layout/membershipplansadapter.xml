<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/allsideborder"
    android:orientation="vertical">
    <TextView

        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/allsideborder"
        android:fontFamily="@font/roboto_bold"

        android:gravity="center"
        android:padding="@dimen/_20sdp"
        android:text="Basic Plan"
        android:textColor="@color/black"
        android:textSize="@dimen/_22sdp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="#CCF6F6F6"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="#CCF6F6F6"

            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="#CCF6F6F6"

                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="left"
                    android:text="\u20B9 "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <FrameLayout
                    android:id="@+id/fl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@color/grey_"

                        />

                    <TextView
                        android:id="@+id/crossreupess"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_amt"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text=" 270"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCF6F6F6"

                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_4sdp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="left"
                    android:padding="@dimen/_10sdp"
                    android:text="\u20B9 315 /-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/daysTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="For 84 Days"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="normal" />


            </LinearLayout>

            <TextView

                android:id="@+id/joinnowTv"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/allsideborderblue"
                android:fontFamily="@font/roboto_bold"

                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:text="Join Now"
                android:textColor="#3f51b5"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
