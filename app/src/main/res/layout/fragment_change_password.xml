<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#B3F6F6F6"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="@dimen/_2sdp"
        android:id="@id/rl_topp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/head_lightBlue">


        <ImageView
            android:id="@+id/arrowIvv"

            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:rotation="-90"
            android:src="@drawable/arrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_dashboardd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_toRightOf="@id/arrowIvv"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center"

            android:paddingLeft="@dimen/_15sdp"
            android:text="Dashboard > Change Password "
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/rl_topp"
        android:background="@color/head_lightBlue">

        <TextView
            android:id="@id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_toRightOf="@id/tv_home"
            android:background="@color/head_lightBlue"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:text=" > You can change your password"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tvnewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/profile_image"
                android:fontFamily="@font/oswald"
                android:padding="@dimen/_5sdp"
                android:text="Change Your Password"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <View
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/bg_blue"
                android:visibility="visible" />



                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"

                        android:background="@drawable/border_rectangle"
                        android:layout_gravity="center"

                        android:layout_marginRight="@dimen/_15sdp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                    <EditText
                        android:layout_gravity="center"
                        android:id="@+id/etoldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/etPostName"
                        android:padding="@dimen/_7sdp"

                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:background="@drawable/border_rectangle"
                        android:layout_gravity="center"

                        android:layout_marginRight="@dimen/_15sdp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">
                    <EditText
                        android:id="@+id/etnewPassword"
                        android:padding="@dimen/_7sdp"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/allsideborder"
                        android:fontFamily="@font/roboto"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"

                        android:background="@drawable/border_rectangle"
                        android:layout_gravity="center"

                        android:layout_marginRight="@dimen/_15sdp"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">
                    <EditText
                        android:id="@+id/etconfirmMnewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/allsideborder"
                        android:padding="@dimen/_7sdp"

                        android:hint="Confirm New Password"
                        android:inputType="textPassword"

                        android:textColor="@color/black_text"
                        android:textColorHint="@color/hint_color"
                        android:textSize="@dimen/_14sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tvUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="left"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:background="@drawable/rect_light_blue"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingTop="@dimen/_8sdp"
                            android:paddingRight="@dimen/_14sdp"
                            android:paddingBottom="@dimen/_8sdp"
                            android:text="Update Password"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/bg_lightgrey"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@dimen/_1sdp"
                    app:contentPadding="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_370sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/refer_icon"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/bg_lightgrey"
                android:visibility="gone">

                <TextView
                    android:id="@+id/refe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/oswald"
                    android:gravity="center_vertical|bottom"
                    android:paddingTop="@dimen/_20sdp"
                    android:text="@string/refer_and_get_free_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_35sdp" />

                <TextView
                    android:id="@+id/tvreferdesc"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/refe"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="@string/invite_your_friends_to_urban_company_services_they_get_rs_100_off_you_win_upto_rs_5000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp" />

                <RelativeLayout
                    android:id="@+id/rlsearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/tvreferdesc"
                    android:layout_marginTop="@dimen/_10sdp">


                    <EditText
                        android:id="@+id/searchhview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/allsideborder"
                        android:gravity="center_vertical"
                        android:hint="Enter mobile number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/blackborder"
                        android:gravity="center"
                        android:text="Send"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_below="@+id/rlsearch"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/blackborder"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/googleplay_new" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/blackborder"
                        android:padding="@dimen/_2sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/appstore_new" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/scroll_side_menu"
        android:layout_below="@+id/rl_topp"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:animateLayoutChanges="true"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_5sdp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            android:layout_below="@+id/tvPackage"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_5sdp"
            app:contentPadding="0dp">

            <LinearLayout
                android:layout_margin="@dimen/_2sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_Dashboard"
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bl"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="Dashboard"
                    android:textColor="@color/slider"
                    android:visibility="gone" />

                <TextView

                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/allsideborder"

                    android:layout_margin="@dimen/_2sdp"
                    android:id="@+id/tv_myBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="My Booking"
                    android:textColor="@color/black"
                    />


                <TextView

                    android:layout_margin="@dimen/_2sdp"
                    android:background="@drawable/allsideborder"

                    android:id="@+id/tv_myProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="My Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:background="@drawable/allsideborder"

                    android:layout_margin="@dimen/_2sdp"
                    android:maxLines="1"

                    android:id="@+id/tv_myWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="My Wallet"
                    android:textColor="@color/black_text"

                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:background="@color/head_lightBlue"

                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_2sdp"
                    android:maxLines="1"
                    android:id="@+id/tv_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="Change Password"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:background="@drawable/allsideborder"
                    android:maxLines="1"

                    android:layout_margin="@dimen/_2sdp"

                    android:id="@+id/tv_myReviews"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="My Reviews &amp; Rating"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:maxLines="1"


                    android:background="@drawable/allsideborder"

                    android:layout_margin="@dimen/_2sdp"

                    android:id="@+id/tv_myAddressbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="My Address Book"
                    android:textColor="@color/black_text"
                    />

                <TextView

                    android:background="@drawable/allsideborder"

                    android:layout_margin="@dimen/_2sdp"
                    android:maxLines="1"

                    android:id="@+id/tv_mySupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:padding="@dimen/_8sdp"
                    android:text="My Support"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:background="@drawable/allsideborder"

                    android:layout_margin="@dimen/_2sdp"
                    android:maxLines="1"

                    android:id="@+id/tv_referralDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:gravity="left"
                    android:padding="@dimen/_8sdp"
                    android:text="Referral Dashboard"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:id="@+id/tv_Financial"
                    android:textColor="@color/black_text"
                    android:background="@drawable/allsideborder"
                    android:text=" Membership "

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="@font/lato"
                    android:gravity="left"
                    android:maxLines="1"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </ScrollView>

</RelativeLayout>