<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/allsideborder"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/_5sdp"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/allsideborder"
                android:padding="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tvwallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_margin="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="I am safe and healthy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvwallet"
                    android:drawableLeft="@drawable/dot_background"
                    android:drawableTint="@color/black"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/_10sdp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/text"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/grey_light" />


                <CheckBox
                    android:id="@+id/rb"

                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:checked="false"
                    android:theme="@style/checkBoxStyle" />


                <TextView
                    android:id="@+id/newid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/rb"
                    android:text="Click here to agree"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newid"
                    android:layout_marginStart="@dimen/_5sdp"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/rb"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_below="@+id/desc"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/grey_light" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvgreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/head_lightBlue"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textSize="@dimen/_20sdp"
                    android:layout_below="@+id/view2"
                    android:padding="@dimen/_10sdp"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textColor="@color/white" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>